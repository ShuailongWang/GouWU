/* pages/goods_list/goods_list.wxss */

.goods_item{
  display: flex;
  border-bottom: 1rpx solid #cccccc;
}

/* 左 */
.goods_imag_wrap{
  flex: 2;
  justify-content: center;
  align-items: center;
}
.goods_imag_wrap image{
  width: 70%;
}


/* 右 */
.goods_info_wrap{
  flex: 3;
  display: flex;
  flex-direction: column; /*方向*/
  justify-content: space-around;
}
.goods_info_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;  /*2省略号*/
}
.goods_info_price{
  color: var(--themeColor);
  font-size: 32rpx;
}