/* pages/goos_detail/goos_detail.wxss */

page{
  padding-bottom: 90rpx;  /*跟底部工具栏的高一致*/
}

.details_swiper swiper{
  height: 65vw;
  text-align: center;
}
.details_swiper image{
  width: 60%;
}

.details_price_num{
  color: var(--themeColor);
  padding: 15rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.details_price_row{
  display: flex;
  border-top: 5rpx solid #dedede;
  border-bottom: 5rpx solid #dedede;
  padding: 10rpx 0;
}
.row_name{
  flex: 5;
  color: #000000;
  font-size: 30rpx;
  padding: 0 10rpx;

  /*文字第二行超出显示 。。。*/
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;  /*第几行显示。。。*/
}
.row_collect{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-left: 1rpx solid #000000;
}


.details_info_title{
  font-size: 32rpx;
  color: var(--themeColor);
  font-weight: 600;
  padding: 20rpx;
}

/* bottom */
.bottom_tab{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
  border-top: 1px solid #ccc;
}
.bottom_item{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  position: relative;
}
.bottom_item button{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.button_buy{
  flex: 2;
  background-color: #eb4450;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}
.button_car{
  flex: 2;
  background-color: #ffa500;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
}

/* 收藏 */
.isCollection{
  color: var(--themeColor);
}