
/* pages/home/home.wxss */

/*轮播图*/
.cl_swiper{
  width: 100%;
  height: 340rpx;
}
.swiper_image{
  width: 100%;
}

/*分类列表*/
.home_cate{
  display: flex;
}
.home_cate navigator{
  flex: 1;
  padding: 20rpx;
}
.home_cate navigator image{
  width: 100%;
}

/*Section*/
.home_section{
  overflow: hidden;
}
.section_title{
  padding: 10rpx 0;
}
.section_title image{
  width: 100%;
}
.section_items navigator{
  float: left;
  width: 33.33%;
}
.section_items navigator image{
  width: 100%;
  height: 100%;
}

/* 后四个超链接的高度 */
.section_items navigator:nth-last-child(-n+4){
  height: calc(33.33vw * 386 / 232 / 2);
  border-left: 10rpx solid #fff;
}
/*添加下面的边框， 2，3*/
.section_items navigator:nth-child(2),
.section_items navigator:nth-child(3){
  border-bottom: 10rpx solid #fff;
}
